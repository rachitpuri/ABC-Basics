<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/volume"
        android:layout_width="40dp"
        android:layout_height="40dp" 
        android:contentDescription="@string/description"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:tag="ON"
        android:src="@drawable/vol_on"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

           <Button
               android:id="@+id/music_main"
               android:layout_width="150dp"
               android:layout_height="120dp"
               android:layout_alignBaseline="@+id/puzzle_main"
               android:layout_alignBottom="@+id/puzzle_main"
               android:layout_alignLeft="@+id/number_main"
               android:background="@drawable/image_music"/>

           <Button
               android:id="@+id/number_main"
               android:layout_width="150dp"
               android:layout_height="120dp"
               android:layout_alignBaseline="@+id/abc_main"
               android:layout_alignBottom="@+id/abc_main"
               android:layout_alignParentRight="true"
               android:background="@drawable/image_number" />

           <Button
               android:id="@+id/abc_main"
               android:layout_width="150dp"
               android:layout_height="120dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="54dp"
               android:background="@drawable/image_abc" />

           <Button
               android:id="@+id/puzzle_main"
               android:layout_width="150dp"
               android:layout_height="120dp"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/number_main"
               android:layout_marginTop="38dp"
               android:background="@drawable/image_bulb" />
           
    </RelativeLayout>
	
</LinearLayout>
