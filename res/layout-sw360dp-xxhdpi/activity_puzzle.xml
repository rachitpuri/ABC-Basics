<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:background="@drawable/voice_background" >
        
    <Button
    	android:id="@+id/puzzlehome_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home" />

        <ImageView
            android:id="@+id/question"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/puzzlehome_btn"
            android:layout_toRightOf="@+id/lefttop"
            android:src="@drawable/question_mark" />

        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:background="@drawable/refresh_puzzle"/>

        <ImageView
            android:id="@+id/righttop"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginBottom="-16dp"
            android:layout_above="@+id/leftbottom"
            android:layout_toLeftOf="@+id/leftbottom"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/leftbottom"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_above="@+id/refresh_btn"
            android:layout_marginBottom="97dp"
            android:layout_toLeftOf="@+id/question"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/lefttop"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_alignLeft="@+id/refresh_btn"
            android:layout_alignTop="@+id/righttop"
            android:layout_marginLeft="40dp"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/rightbottom"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_alignLeft="@+id/righttop"
            android:layout_alignTop="@+id/leftbottom"
            android:src="@drawable/background" />

    </RelativeLayout>
