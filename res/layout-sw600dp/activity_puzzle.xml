<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:background="@drawable/voice_background" >
        
    <Button
    	android:id="@+id/puzzlehome_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home" />

        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:background="@drawable/refresh_puzzle"/>

        <ImageView
            android:id="@+id/question"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_alignTop="@+id/puzzlehome_btn"
            android:src="@drawable/question_mark" />

        <ImageView
            android:id="@+id/rightbottom"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/righttop"
            android:layout_alignTop="@+id/leftbottom"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/righttop"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_above="@+id/rightbottom"
            android:layout_alignRight="@+id/refresh_btn"
            android:layout_marginRight="20dp"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/lefttop"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_alignRight="@+id/question"
            android:layout_below="@+id/question"
            android:layout_marginRight="30dp"
            android:layout_marginTop="166dp"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/leftbottom"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/lefttop"
            android:layout_below="@+id/lefttop"
            android:src="@drawable/background" />

    </RelativeLayout>
